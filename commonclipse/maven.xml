<?xml version="1.0" encoding="UTF-8"?>
<project default="rebuild-all" xmlns:j="jelly:core" xmlns:u="jelly:util">

	<goal name="rebuild-all">
		<j:set var="goals" value="clean,jar:jar,eclipseplugin:zip,site:generate" />
		<mkdir dir="${maven.build.dir}" />
		<u:tokenize var="goals" delim=",">${goals}</u:tokenize>
		<j:forEach items="${goals}" var="goal" indexVar="goalNumber">
			Now attaining goal number ${goalNumber}, which is ${goal}
			<attainGoal name="${goal}" />
		</j:forEach>
	</goal>

    <goal name="eclipseplugin:zip">
        
          <mkdir dir="${maven.build.dir}/dist" />

        <!-- features -->
          <copy todir="${maven.build.dir}/dist/features/${pom.package}_${pom.currentVersion}" >
            <fileset dir="${maven.src.dir}/feature"/>
          </copy>


        <!-- plugins -->
          <copy tofile="${maven.build.dir}/dist/plugins/${pom.package}_${pom.currentVersion}/commonclipse-${pom.currentVersion}.jar"
             file="${maven.build.dir}/${maven.final.name}.jar">
          </copy>

          <copy todir="${maven.build.dir}/dist/plugins/${pom.package}_${pom.currentVersion}" >
             <fileset dir="${maven.base.dir}" includes="plugin.*,icons/*,LICENSE.txt" />
          </copy>

        <!-- src -->
          <zip destfile="${maven.build.dir}/dist/plugins/${pom.package}_${pom.currentVersion}/${pom.name}-src.zip">
              <zipfileset dir="${maven.src.dir}/main"/>
          </zip>

          <zip destfile="${maven.build.dir}/${pom.name}-${pom.currentVersion}.zip">
              <zipfileset dir="${maven.build.dir}/dist" />
          </zip>
    </goal>
    
    <preGoal name="site:sshdeploy">
		<attainGoal name="updatesite" />
	</preGoal>
    
    <goal name="updatesite">
		
	  <attainGoal name="eclipseplugin:zip" />
		  
      <!-- copy site.xml -->
      <copy file="${maven.src.dir}/update/site.xml" todir="${maven.build.dir}/docs" />

      <!-- feature -->
      <mkdir dir="${maven.build.dir}/docs/features" />
      <zip destfile="${maven.build.dir}/docs/features/commonclipse-${pom.currentVersion}.jar">
            <fileset dir="${maven.src.dir}/feature"/>
      </zip>
		  

      <!-- copy plugin -->
      <mkdir dir="${maven.build.dir}/docs/plugins" />
      <zip destfile="${maven.build.dir}/docs/plugins/net.sf.commonclipse_${pom.currentVersion}.jar">
            <zipfileset dir="${maven.build.dir}" includes="${maven.final.name}.jar" fullpath="commonclipse.jar" />
            <zipfileset dir="${maven.build.dir}" includes="${pom.name}-src.zip" />
            <zipfileset dir="${maven.base.dir}" includes="plugin*,icons/*,LICENSE.txt" />
      </zip>

    </goal>
    
      
</project>
